{
  "compilerOptions": {
    "target": "ES2020",           // Compiles to ES2020 JavaScript
    "module": "commonjs",         // Uses CommonJS modules (Node.js standard)
    "outDir": "./dist",           // Output directory for compiled JS
    "rootDir": "./",              // Source files location
    "strict": true,               // Enables strict type checking
    "esModuleInterop": true,      // Better compatibility with CommonJS
    "skipLibCheck": true,         // Skip library definition checks
    "forceConsistentCasingInFileNames": true, // Prevents case-sensitive issues
    "lib": ["ES2020", "DOM"]      // Includes DOM types (console, etc.)
  },
  "include": ["**/*.ts"],         // Files to compile
  "exclude": ["node_modules"]     // Files to ignore
}